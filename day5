
#include <stdio.h>

struct fract
{
    int num[20];
    int den[20];
    int n;
    int l;
    int totsum;
};

struct fract read1()
{
    struct fract i;
    int k;
    printf("\nEnter the number of fractions you want to input:");
    scanf("%d",&i.n);
    printf("\nEnter the numerator:");
    for(k=0;k<i.n;k++)
    scanf("%d",&i.num[k]);
    printf("Enter the denominators:\n");
    for(k=0;k<i.n;k++)
    scanf("%d",&i.den[k]);
    return i;
}

void display(struct fract i)
{
   printf("sum of entered fractions is=  %d/%d",i.totsum,i.l);
    
}

struct fract compute(struct fract i)
{
    int temp[20],sum=0,k;
    i.l=1;
    i.totsum=0;
    for(k=0;k<i.n;k++)
        i.l=i.l*i.den[k];
    for(k=0;k<i.n;k++)
        temp[k]=i.l/i.den[k];
    for(k=0;k<i.n;k++)
        i.totsum=i.totsum+(i.num[k]*temp[k]);
    return i;   
}

int main()
{
    struct fract i;
    i=read1();
    i=compute(i);
    display(i);
    return 0;
}
